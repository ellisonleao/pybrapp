NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer
        NavigationDrawerToolbar:
            title: 'Menu'
        NavigationDrawerIconButton:
            icon: 'arrow-right-drop-circle'
            text: 'Sobre'
            on_release: app.root.ids.scr_mngr.current = 'about'
        NavigationDrawerIconButton:
            icon: 'arrow-right-drop-circle'
            text: 'Palestras'
            on_release: app.root.ids.scr_mngr.current = 'speech'
        NavigationDrawerIconButton:
            icon: 'arrow-right-drop-circle'
            text: 'Tutoriais'
            on_release: app.root.ids.scr_mngr.current = 'tutorial'
        NavigationDrawerIconButton:
            icon: 'arrow-right-drop-circle'
            text: 'Sprints'
            on_release: app.root.ids.scr_mngr.current = 'sprint'
        NavigationDrawerIconButton:
            icon: 'arrow-right-drop-circle'
            text: 'Patrocinadores'
            on_release: app.root.ids.scr_mngr.current = 'sponsors'

    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: 'Python Brasil 2017'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]
        ScreenManager:
            id: scr_mngr
            AboutScreen:
            SpeechScreen:
            TutorialScreen:
            SprintScreen:
            SponsorsScreen:
